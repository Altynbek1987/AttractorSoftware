<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/photo_user"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/photo_user"
        app:layout_constraintStart_toStartOf="@id/photo_user"
        app:layout_constraintTop_toBottomOf="@id/photo_user"
        tools:text="@tools:sample/first_names" />

    <TextView
        android:id="@+id/second_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/first_name"
        app:layout_constraintStart_toStartOf="@id/first_name"
        app:layout_constraintTop_toBottomOf="@id/first_name"
        tools:text="@tools:sample/last_names" />

    <TextView
        android:id="@+id/tv_education"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/second_name"
        app:layout_constraintStart_toStartOf="@id/second_name"
        app:layout_constraintTop_toBottomOf="@id/second_name"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/name_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/tv_education"
        app:layout_constraintStart_toStartOf="@id/tv_education"
        app:layout_constraintTop_toBottomOf="@id/tv_education"
        tools:text="@tools:sample/first_names" />

    <TextView
        android:id="@+id/work_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/name_company"
        app:layout_constraintStart_toStartOf="@id/name_company"
        app:layout_constraintTop_toBottomOf="@id/name_company"
        tools:text="@tools:sample/first_names" />

    <TextView
        android:id="@+id/second_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/work_user"
        app:layout_constraintStart_toStartOf="@id/work_user"
        app:layout_constraintTop_toBottomOf="@id/work_user"
        tools:text="@tools:sample/first_names" />

    <TextView
        android:id="@+id/second_work_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/second_company"
        app:layout_constraintStart_toStartOf="@id/second_company"
        app:layout_constraintTop_toBottomOf="@id/second_company"
        tools:text="@tools:sample/first_names" />

</androidx.constraintlayout.widget.ConstraintLayout>